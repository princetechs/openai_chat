<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Start a New Chat</h4>
      </div>
      <div class="card-body">
        <%= form_with(model: @chat, local: true) do |form| %>
          <% if @chat.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= pluralize(@chat.errors.count, "error") %> prohibited this chat from being saved:</h5>
              <ul>
                <% @chat.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title, class: "form-control", placeholder: "Enter a title for your conversation" %>
            <div class="form-text">Give your chat a descriptive name to help you find it later.</div>
          </div>

          <div class="d-grid gap-2">
            <%= form.submit "Create Chat", class: "btn btn-primary" %>
            <%= link_to "Cancel", chats_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

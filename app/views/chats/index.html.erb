<div class="row mb-4">
  <div class="col">
    <h1>Your Conversations</h1>
  </div>
  <div class="col-auto">
    <%= link_to new_chat_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg"></i> New Chat
    <% end %>
  </div>
</div>

<% if @chats.empty? %>
  <div class="text-center py-5">
    <div class="mb-4">
      <i class="bi bi-chat-dots" style="font-size: 4rem;"></i>
    </div>
    <h3>No chats yet</h3>
    <p class="text-muted">Start a new conversation with OpenAI</p>
    <%= link_to "Create your first chat", new_chat_path, class: "btn btn-primary" %>
  </div>
<% else %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @chats.each do |chat| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= chat.title %></h5>
            <p class="card-text text-muted small">
              <i class="bi bi-clock"></i> <%= time_ago_in_words(chat.created_at) %> ago
            </p>
          </div>
          <div class="card-footer bg-transparent d-flex justify-content-between">
            <%= link_to "View", chat_path(chat), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Delete", chat_path(chat), 
                method: :delete, 
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this chat?" }, 
                class: "btn btn-sm btn-outline-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
